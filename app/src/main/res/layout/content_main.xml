<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="csdmovie.assignment.controller.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BuzzMovieSelector!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:textSize="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:onClick="onLogoutButtonPressed"
        android:theme="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/view1"
        android:layout_alignEnd="@+id/view1"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view1"
        android:layout_below="@+id/logoutButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/button"
        android:onClick="onEditProfileButtonPressed"
        android:theme="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/view1"
        android:layout_alignRight="@+id/view1"
        android:layout_alignEnd="@+id/view1"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view2"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Movie Title"
        android:id="@+id/button4"
        android:onClick="onSearchMovieButtonPressed"
        android:theme="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_alignRight="@+id/view2"
        android:layout_alignEnd="@+id/view2" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view3"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommend Movies"
        android:id="@+id/button5"
        android:theme="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/view3"
        android:layout_alignRight="@+id/view3"
        android:onClick="onRecommendButtonPressed" />
</RelativeLayout>
