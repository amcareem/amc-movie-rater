<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csdmovie.assignment.controller.AdminRegistrationActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/registrationNameText"
        android:hint="@string/registration_name_hint"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationPassText"
        android:hint="@string/registration_password_hint"
        android:inputType="textPassword"
        android:layout_below="@+id/registrationNameText"
        android:layout_alignRight="@+id/registrationNameText"
        android:layout_alignEnd="@+id/registrationNameText"
        android:layout_alignLeft="@+id/registrationNameText"
        android:layout_alignStart="@+id/registrationNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationReEnterPassText"
        android:hint="@string/registration_re_enter_password"
        android:layout_below="@+id/registrationPassText"
        android:layout_alignRight="@+id/registrationPassText"
        android:layout_alignEnd="@+id/registrationPassText"
        android:layout_alignLeft="@+id/registrationPassText"
        android:layout_alignStart="@+id/registrationPassText"
        android:inputType="textPassword" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/cancel"
        android:onClick="cancelRequest"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignTop="@+id/registrationButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/registrationButton"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="54dp"
        android:onClick="onAdminRegisterButtonClicked"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="What is the name of the team that created this app (3 words, no spacses, all lowercase)?"
        android:id="@+id/textView8"
        android:layout_below="@+id/registrationReEnterPassText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationSecretText"
        android:hint="Admin Secret"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
